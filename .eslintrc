{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "max-len": [1, 250, 2, {
      ignoreComments: true
    }]
  },
  "extends": ["eslint:recommended", "plugin:react/recommended", "standard"],
  "env": {
    "browser": true
  },
  "globals": {
    "document": false
  }

}
